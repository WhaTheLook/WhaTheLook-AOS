<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="android:background">@null</item>
        <item name="tabRippleColor">@android:color/transparent</item>
        <item name="tabBackground">@android:color/transparent</item>
        <item name="tabIndicatorFullWidth">true</item>
    </style>

    <style name="AppRoundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="AppTextTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>