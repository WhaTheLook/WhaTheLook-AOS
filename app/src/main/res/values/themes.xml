<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WhaTheLook" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:colorBackground">@color/white</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar" >true</item>
    </style>

    <style name="Theme.WhaTheLook" parent="Base.Theme.WhaTheLook" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- 스플래시 화면 배경 색상 -->
        <item name="windowSplashScreenBackground">@color/white</item>
        <!-- 스플래시 화면 아이콘 -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_symbol</item>
        <!-- 스플래시 화면 지속 시간 -->
        <item name="windowSplashScreenAnimationDuration">200</item>
        <!-- 스플래시 화면 이후 테마 -->
        <item name="postSplashScreenTheme">@style/Base.Theme.WhaTheLook</item>
    </style>
</resources>